<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:stores) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%-# button_link_to Spree.t(:new_store), new_object_url,  :icon => 'icon-plus', :id => 'admin_new_store_link' %>
  </li>
<% end %>

<table class="index" id='listing_stores'>
  <colgroup>
    <col style="width: 120px">
    <col style="width: 80px">
    <col style="width: 80px">
    <col style="width: 220px">
    <col style="width: 15%">
  </colgroup>
  <thead>
    <th><%= Spree.t(:store_name) %></th>
    <th><%= Spree.t(:store_code) %></th>
    <th><%= Spree.t(:send_mails_as) %></th>
    <th><%= Spree.t(:domains) %></th>
    <th data-hook="admin_stores_index_header_actions" class="actions"></th>
  </thead>
  <tbody>
    <tr id="<%= spree_dom_id current_store %>"
        data-hook="admin_stores_index_rows" class="<%= cycle('odd', 'even') %>">
      <td><%= current_store.name %></td>
      <td><%= current_store.code %></td>
      <td><%= current_store.mail_from_address %></td>
      <td><%= current_store.url %></td>
      <td data-hook="admin_stores_index_row_actions" class="actions">
        <%= link_to_edit current_store, :no_text => true %> &nbsp;
        <%-# link_to_delete store, :no_text => true %>
      </td>
    </tr>
  </tbody>
</table>
